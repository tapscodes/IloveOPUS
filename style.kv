#:import get_color_from_hex kivy.utils.get_color_from_hex

<RootWidget@BoxLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: [10, 0, 10, 10]
    canvas.before:
        Color:
            rgba: 0, 0.12, 0.25, 1  # Navy blue
        Rectangle:
            pos: self.pos
            size: self.size

<ButtonRow@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 40
    spacing: 10

<Button>:
    background_normal: ''
    background_color: 0, 0, 0, 0  # Make background transparent so canvas is visible
    color: 1, 1, 1, 1
    font_size: 16
    size_hint_y: None
    height: 40
    canvas.before:
        Color:
            rgba: 0.1, 0.3, 0.6, 1  # Button color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5,]  # roundness

<Label>:
    color: 1, 1, 1, 1
    font_size: 16
    size_hint_y: None
    height: 24

<ProgressBar>:
    background_color: 0.05, 0.1, 0.2, 1
    color: 0.2, 0.8, 0.2, 1
    size_hint_y: None
    height: 20

<FileList>:
    orientation: 'vertical'
    spacing: 2
    padding: [0, 0, 0, 0]
    canvas.before:
        Color:
            rgba: 0, 0.12, 0.25, 0
        Rectangle:
            pos: self.pos
            size: self.size

<CheckBox>:
    size_hint_y: None
    height: 40
    size_hint_x: None
    width: 40
    color: 0.2, 0.8, 0.2, 1
    background_checkbox_normal: ''
    background_checkbox_down: ''
    canvas.before:
        Color:
            rgba: (0.1, 0.3, 0.6, 1) if self.active else (0.05, 0.1, 0.2, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8,]
